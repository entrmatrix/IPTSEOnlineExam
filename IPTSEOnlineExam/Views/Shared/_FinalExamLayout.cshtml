<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Intellectual Property Talent Search Examination</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
    <style>
        .formcontrol1 {
            width: 100%;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        }
    </style>
    <script type="text/javascript">
            function noBack() { window.history.forward(); }
            function disableF5(e) { if ((e.which || e.keyCode) == 116 || (e.which || e.keyCode) == 82) e.preventDefault(); };
            $(document).ready(function () {
                $(document).on("keydown", disableF5);
                window.history.forward(-1);
            });
            window.addEventListener('beforeunload', function (e) {
                // Cancel the event as stated by the standard.
                e.preventDefault();
                // Chrome requires returnValue to be set.
                e.returnValue = '';
            });
            function CallbackFunction(event) {
                if (window.event) {
                    if (window.event.clientX < 40 && window.event.clientY < 0) {
                        alert("back button is clicked");
                    } else {
                        alert("refresh button is clicked");
                    }
                } else {
                    if (event.currentTarget.performance.navigation.type == 2) {
                        alert("back button is clicked");
                    }
                    if (event.currentTarget.performance.navigation.type == 1) {
                        alert("refresh button is clicked");
                    }
                }
            }
    </script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body onload="noBack();"
     onpageshow="if (event.persisted) noBack();" onunload="" onkeydown="return (event.keyCode == 154)">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div id="clockdiv1" class="navbar-header navbar-left navbar-brand" style="float:right;font-size:small;padding-top: 20px;" runat="server"></div>
            <div class="navbar-header navbar-right ">
                <img src="~/Images/logo.png" height="50" width="50" />
                <div class="navbar-brand">Intellectual Property Talent Search Examination</div>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <div class="container">
                    <div class="navbar-right navbar-brand">
                        <a href="http://www.martancy.com/" target="_blank">Site Powered by Martancy </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        function disableF5(e) { if ((e.which || e.keyCode) == 116 || (e.which || e.keyCode) == 82) e.preventDefault(); };

        $(document).ready(function () {
            $(document).on("keydown", disableF5);
        });
    var dt1 = '@ViewBag.EndTime';
    var dateAr1 = dt1.split('-');
    var newDate1 = dateAr1[1] + '/' + dateAr1[0] + '/' + dateAr1[2];

    var end1 = new Date(dateAr1[1] + '/' + dateAr1[0] + '/' + dateAr1[2]);

    var _second1 = 1000;
    var _minute1 = _second1 * 60;
    var _hour1 = _minute1 * 60;
    var _day1 = _hour1 * 24;
    var timer1;

    function showRemaining1() {
       var now1 = new Date();
       var distance1 = end1 - now1;
       if (distance1 < 0) {
           clearInterval(timer1);
           document.getElementById('clockdiv1').innerHTML = 'EXPIRED!';
           window.location.href = '../Result/ResultPage';
           return;
       }
    var days1 = Math.floor(distance1 / _day1);
    var hours1 = Math.floor((distance1 % _day1) / _hour1);
    var minutes1 = Math.floor((distance1 % _hour1) / _minute1);
    var seconds1 = Math.floor((distance1 % _minute1) / _second1);
        if (seconds1.toString().length < 2)
        {
            seconds1 = '0' + seconds1;
        }

        document.getElementById('clockdiv1').innerHTML = 'Total Time Remaining :- ';
        document.getElementById('clockdiv1').innerHTML += minutes1 + ' Mins ';
        document.getElementById('clockdiv1').innerHTML += seconds1 + ' Secs';
        document.getElementById('clockdiv').innerHTML = 'Total Time Remaining :- ';
        document.getElementById('clockdiv').innerHTML += minutes1 + ' Mins ';
        document.getElementById('clockdiv').innerHTML += seconds1 + ' Secs';
   }

    timer1 = setInterval(showRemaining1, 1000);
    </script>
</body>
</html>
